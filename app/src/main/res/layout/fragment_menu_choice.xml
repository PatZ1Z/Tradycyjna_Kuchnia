<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_choice_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.MenuChoiceFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu choice Fragment"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCustomMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom meals"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnReadyMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready meals"/>

</LinearLayout>
